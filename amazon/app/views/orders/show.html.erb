<div class="columns">
  <% if @order.books.length > 0 %>
  <ul class="books">
    <% @order.order_items.each do |item| %>
    <li>
      <div class="row small-collapse">
        <div class="medium-10 small-12 columns">
          <div class="row small-collapse">
            <div class="small-10 columns">
              <p>
                <%= link_to item.book.title, book_path(item.book) %>
              </p>
            </div>
            <div class="small-2 columns">
              <span class=""><%= item.quantity %></span>
            </div>
          </div>
        </div>
        <div class="medium-2 small-12 columns">
        <%= form_for item, method: :delete do |f| %>
          <input name="id" type="hidden" value="<%= item.id %>">
          <%= f.submit "Remove", class: "expand tiny alert button" %>
        <% end %>
        </div>
      </div>
      <hr>
    </li>
    <% end %>
  </ul>
  <p>Total: <span><%= t(:currency) %></span> <span><%= @order.get_total_price %></span></p>
  <% else %>
    <h2>Cart is empty</h2>
  <% end %>
</div>