<div class="columns">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "small-12 medium-6" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <small>(leave blank if you don't want to change it)</small>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <small>(we need your current password to confirm your changes)</small>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: "button" %>
  </div>
<% end %>
  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= form_for @billing_address do |f| %>
        <fieldset>

        <legend>Billing address</legend>
        <%= f.hidden_field :address_type, value: "billing_address" %>

        <%= f.label "First name" %>
        <%= f.text_field :firstname, value: current_customer.firstname %>

        <%= f.label "Last name" %>
        <%= f.text_field :lastname, value: current_customer.lastname %>

        <%= f.label "Street address" %>
        <%= f.text_field :address %>

        <%= f.label "ZIP code" %>
        <%= f.text_field :zipcode %>

        <%= f.label "Phone number" %>
        <%= f.text_field :phone %>

        <%= f.label "City" %>
        <%= f.text_field :city %>

        <%= f.label "Country" %>
        <%= select_tag "address[country_id]", options_from_collection_for_select(@countries, "id", "name", @billing_address.country_id) %>
        <br>
        <br>
        <%= f.submit "Save", class: "small button" %>
        </fieldset>
      <% end %>
    </div>
    <div class="medium-6 small-12 columns">
      <%= form_for @shipping_address do |f| %>
        <fieldset>

        <legend>Shipping address</legend>

        <%= f.hidden_field :address_type, value: "shipping_address" %>

        <%= f.label "First name" %>
        <%= f.text_field :firstname, value: current_customer.firstname %>

        <%= f.label "Last name" %>
        <%= f.text_field :lastname, value: current_customer.lastname %>

        <%= f.label "Street address" %>
        <%= f.text_field :address %>

        <%= f.label "ZIP code" %>
        <%= f.text_field :zipcode %>

        <%= f.label "Phone number" %>
        <%= f.text_field :phone %>

        <%= f.label "City" %>
        <%= f.text_field :city %>

        <%= f.label "Country" %>
        <%= select_tag "address[country_id]", options_from_collection_for_select(@countries, "id", "name", @shipping_address.country_id) %>
        <br>
        <br>
        <%= f.submit "Save", class: "small button" %>
        </fieldset>
      <% end %>
    </div>
  </div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "tiny alert button" %></p>

<%= link_to "Back", :back %>
</div>