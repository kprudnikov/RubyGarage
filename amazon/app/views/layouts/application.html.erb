<!DOCTYPE html>
<html>
<head>
  <title>Amazon</title>
  <meta name="viewport" content="initial-scale=1, width=device-width">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="grid-frame">
  <div class="main-container row">
    <header class="small-12 columns">
      <% if customer_signed_in? %>
        <small>Signed in as <%= current_customer.firstname %></small>
        <br>
      <% end %>
      <nav>
        <%= link_to t("menu.home"), root_path, class: "secondary button small" %>
        <% if customer_signed_in? %>
            <%= link_to order_path(current_customer.order_in_progress) , class: "secondary button small", title: "Current order" do %>
              <i class="fi-shopping-cart large"></i>
              <span>: <%= current_customer.order_in_progress.books.length %></span>
            <% end %>
          <%= link_to "Log out", destroy_customer_session_path, :method => :delete, class: "secondary button small" %>
          <%= link_to edit_customer_registration_path, class: "secondary small button", title: "Settings" do %>
            <i class="fi-widget large"></i>
          <% end %>
          <%= link_to orders_path, class: "secondary small button", title: "Orders history" do %>
            <i class="fi-clock large"></i>
          <% end %>
        <% else %>
          <%= link_to "Log in", new_customer_session_path, class: "secondary button small" %>
          <%= link_to "Sign up", new_customer_registration_path, class: "secondary button small" %>
        <% end %>
      </nav>
    </header>
    <main class="clearfix">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name+" label columns" %>
        <% end -%>
        <%= yield %>
    </main>
  </div>
</body>
</html>